@model IEnumerable< WebApplication2.Models.Student>
@{
    int idNo = 1;
}


<h1 class="fw-bold text-center">Table View</h1>
<a asp-action="CreateOrEdit" asp-controller="Student" class="btn btn-success m-3">Create New</a>

<div class="container mt-2">
    <table class="table table-bordered table-success table-striped p-5">
        <thead>
            <tr class="text-center"> 
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Address</th>
                <th scope="col">Phone</th>
                <th scope="col">Email</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>@idNo</td>                 
                    <td>@item.Name</td>                 
                    <td>@item.Address</td>                 
                    <td>@item.Phone</td>                 
                    <td>@item.Email</td>                 
                    <td>
                        <a asp-action="CreateOrEdit" asp-controller="Student" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                        <a asp-action="Delete" asp-controller="Student" asp-route-id="@item.Id" onclick="return confirm('Are You Sure To Delete This?')" class="btn btn-danger">Delete</a>
                        <a asp-action="Details" asp-controller="Student" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    </td>                 
                </tr>
                idNo++;
            }
        </tbody>
    </table>
</div>
